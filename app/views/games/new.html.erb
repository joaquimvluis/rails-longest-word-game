<h1>New Game</h1>
<ul>
  <% @grid.each do |letter| %>
  <li><%= letter %></li>
  <% end %>
</ul>

<form action="/score" method="POST" data-turbo="false">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :grid, @grid %>
  <label for="attempt">What is the longest word you can find?</label>
  <input type="text" name="attempt" id="attempt">
  <input type="submit" value="Play">
</form>
